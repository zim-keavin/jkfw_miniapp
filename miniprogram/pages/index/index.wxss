/**index.wxss**/

page {
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

/*推荐  */
.re_tit{
    padding: 30rpx;
    display: flex;
    justify-content: space-between;
    background: #fff;
    position: relative;
}
.re_tit::after{
    content: " ";
    position: absolute;
    left: 0;
    bottom: 0;
    right: 0;
    height: 1px;
    border-bottom: 1px solid #e5e5e5;
    color: #e5e5e5;
    transform-origin: 0 100%;
    transform: scaleY(0.5);
}
.re_l{
    font-size: 32rpx;
}
.re_l view{
    display: inline-block;
    width: 32rpx;
    height: 32rpx;
    background: url(https://m.ly.com/healthy/health/assets/images/app/small1/all_icon2.png?t=20171109) no-repeat;
    background-size: 175rpx 249rpx;
    background-position: -2rpx -160rpx;
    margin-right: 14rpx;
}
.re_r{
    position: relative;
    font-size: 24rpx;
    color: #999;
}
.re_r:after{
    content: "";
    display: inline-block;
    width: 20rpx;
    height: 20rpx;
    border-right: 2rpx solid #ccc;
    border-bottom: 2rpx solid #ccc;
    -webkit-transform: rotate(-45deg);
    transform: rotate(-45deg);
    font-size: 0;
    margin-left: 20rpx;
}
.re_bg{
    display: flex;
    justify-content: flex-start;
    background: #fff;
    font-size: 28rpx;
}
.re_bg text{
     font-size: 24rpx;
     color: #999;
     padding-top: 10rpx;
     display: block;
}
.re_bg .re_01{
    flex: 0 0 36%;
    padding: 30rpx 0 0 30rpx;
    position: relative;
}
.re_01 image{
    position: absolute;
    top: 0;
    right: 0;
    display: block;
    width: 73rpx;
    height: 74rpx;
    
}
.re_bg .re_02{
    flex: 0 0 63%;
    position: relative;
}
.ac_1{
    position: absolute;
    bottom: 0 ;
    right: 0;
    display: inline-block;
    width: 260rpx;
    height: 188rpx;
    background: url(https://m.ly.com/healthy/health/assets/images/small/index_ag01.jpg?t=20171109) no-repeat;
    background-size: 260rpx 188rpx;
}
.re_02 > view:first-child{
    display: flex;
    justify-content: space-around;
    text-align: center;
    align-items: center;
}
.re_02 .re_item01 .items{
    position: relative;
    flex: 2;
    height: 160rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    flex-flow: column wrap;
    text-align: center;
}
.re_02 .re_item01 .items:first-child:after{
    content: " ";
    position: absolute;
    right: 0;
    top: 0;
    width: 1px;
    bottom: 0;
    border-right: 1px solid #e5e5e5;
    color: #e5e5e5;
    transform-origin: 100% 0;
    transform: scaleX(0.5);
}
.items text{
    display: block;
}
.re_02 .re_item02{
    padding: 30rpx 0 0 30rpx;
    height: 130rpx;
    position: relative;
}

.re_bg .re_02:before{
    content: " ";
    position: absolute;
    left: 0;
    top: 0;
    width: 1px;
    bottom: 0;
    border-left: 1px solid #e5e5e5;
    color: #e5e5e5;
    transform-origin: 0 0;
    transform: scaleX(0.5);
}
.re_02 .re_item02:before{
    content: " ";
    position: absolute;
    left: 0;
    top: 0;
    right: 0;
    height: 1px;
    border-top: 1px solid #e5e5e5;
    color: #e5e5e5;
    transform-origin: 0 0;
    transform: scaleY(0.5);
}
.ac_2{
    position: absolute;
    bottom: 14rpx;
    right:14rpx;
    display: inline-block;
    width: 188rpx;
    height: 137rpx;
    background: url(https://m.ly.com/healthy/health/assets/images/small/index_ag02.jpg?t=20171109) no-repeat;
    background-size: 188rpx 137rpx;
}


