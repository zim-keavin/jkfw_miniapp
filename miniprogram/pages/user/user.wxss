/* pages/user/user.wxss */
.userinfo {
  height: 450rpx;
  width: 100%;
  background-size: 100% 100%;
  position: relative;
  border: 1px solid rgba(0, 0, 0, 0.1);
  border-left: none;
  border-right: none;
  display: flex;
  flex-direction: column;
  align-items: center;
  transition: all 300ms ease;
  box-shadow: 0px 5px 10px rgba(0, 0, 0, 0.2);
}

.userinfo-avatar {
 position: absolute;
  top: 100rpx;
  left: 285rpx;
  width: 180rpx;
  height: 180rpx;
  overflow: hidden;
  border-radius: 50%;
}

.userinfo-nickname {
  position: absolute;
  top: 285rpx;
  left: 285rpx;
  padding: 15rpx;
  font-size: 40rpx;
  color: white;
}